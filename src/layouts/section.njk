---
layout: base
---

<h2>{{title}}</h2>

{% set aboveContent = content | split(0) %}
{% set belowContent = content | split(1) %}
{% set sectionPosts = collections.posts | filterTags(tagsToInclude) | status('published') %}
{{ aboveContent | safe }}

<br />
<br />



{% if sectionPosts.length > 0 %}
  <ul>
    {% for post in sectionPosts %}
      <li>
          <a  href="{{ post.url }}">{{ post.data.description }}</a>
          <span> | </span>
          <span>{{ post | readingTime }} read</span>
      </li>
    {% endfor %}
    {# {{ stuffInList | safe }} #}
  </ul>
  <br \>
{% endif %}


{{ belowContent | safe }}
